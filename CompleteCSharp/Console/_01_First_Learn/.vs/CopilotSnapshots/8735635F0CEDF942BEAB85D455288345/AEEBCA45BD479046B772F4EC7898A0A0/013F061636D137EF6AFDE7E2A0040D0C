//Bitwise Operators
//int a = 12;  // In binary: 1100
//int b = 5;   // In binary: 0101

//// Bitwise AND
//int resultAnd = a & b;  // 1100 & 0101 = 0100 (4 in decimal)
//Console.WriteLine($"Bitwise AND: {resultAnd}");

//// Bitwise OR
//int resultOr = a | b;  // 1100 | 0101 = 1101 (13 in decimal)
//Console.WriteLine($"Bitwise OR: {resultOr}");

//// Bitwise XOR
//int resultXor = a ^ b;  // 1100 ^ 0101 = 1001 (9 in decimal)
//Console.WriteLine($"Bitwise XOR: {resultXor}");

//// Bitwise NOT
//int resultNot = ~a;  // Inverts all bits of a
//Console.WriteLine($"Bitwise NOT of a: {resultNot}");

//// Left shift
//int leftShift = a << 1;  // Shifts bits to the left by one position
//Console.WriteLine($"Left shift (a << 1): {leftShift}");

//// Right shift
//int rightShift = a >> 1;  // Shifts bits to the right by one position
//Console.WriteLine($"Right shift (a >> 1): {rightShift}");

